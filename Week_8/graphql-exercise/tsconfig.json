{
  "compilerOptions": {
    "target": "es2017",
    "module": "ES2022",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDirs": ["src"],
    "outDir": "dist",
    "lib": ["es2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["node"]
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": ["src/**/*.ts", "resolvers", "graphql_stuff/graphql_schema.ts"],
  "exclude": ["node_modules"]
}
